<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <title>Form</title>
</head>
<body>
    <div class="continer">
        <div class="tab">
            <div class="tabList " id="listTab" onclick="switchTab('listTab','tabListData')">
                list
            </div>
            <div class="tabList active" id="addListTab" onclick="switchTab('addListTab','addTabListData')">
                Add
            </div>
            <div class="tabList" id="detailListTab" onclick="switchTab('detailListTab','detailTabListData')">
                Detail
            </div>
        </div>
        <div class="tabListData  d-none" id="tabListData">
            
        </div>
        <div class="tabAddData  tabListData" id="addTabListData">
            <form id="addUserData">
                <div class="card"> 
                    <div class="card-header text-center">
                        Add User Data
                    </div>
                    <div class="card-body">
                        <div class="form-group p-3">
                            <label for="firstName">First Name</label>
                            <input type="text" class="form-control" name="firstName" id="firstName" placeholder="Enter first name" value="murari">                            
                        </div>
                        <div class="form-group p-3">
                            <label for="lastName">Last Name</label>
                            <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Enter last name" value="kumar">            
                        </div>
                        <div class="form-group p-3">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" name="email" id="email" placeholder="Enter email" value="murarikumar699@gmail.com">             
                        </div>
                        <div class="form-group p-3">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Password" value="1234">
                        </div> 
                        <div class="form-group p-3">
                            <label for="confirmPassword">Confirm Password</label>
                            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" value="1234">
                        </div> 
                        <div class="form-group p-3">
                            <label for="gender">Gender</label>
                            <select class="form-control" name="gender" id="gender">
                                <option value="">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>           
                        </div> 
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="tabAddData tabListData"  id="detailTabListData">
            
        </div>
    </div>
    <script src="/javascripts/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/script.js"></script>
    <script src="/javascripts/validate.js"></script>
    <script src="/javascripts/showlist.js"></script>
</body>
</html>